<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Trace" internalLogFile="nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>
  <variable name="logDir" value="${specialfolder:folder=ApplicationData}/Supervisorio Banco Renault/logs" />

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--<target xsi:type="File" name="logFile" fileName="${basedir}/logs/${shortdate}.log"
             layout="${longdate} [${uppercase:${level}}] ${replace:inner=${logger}:regex=true:searchFor=Supervisório_Banco_Renault.:replaceWith=} | ${message} ${exception:format=ToString}"/>-->

    <target xsi:type="File" name="logFile" fileName="${var:logDir}/${shortdate}.log"
             layout="${longdate} ${pad:fixedLength=true:padding=-10:[${uppercase:${level}}]} ${pad:fixedLength=true:padding=-20:${replace:inner=${logger}:regex=true:searchFor=.*\\.}} ${message} ${when:when=level>=LogLevel.Error:inner=${newline}${exception:format=ToString}}"/>
    
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="logFile"/>
  </rules>
  
</nlog>
