<Window x:Class="Supervisório_Banco_Renault.Views.OP20_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:Supervisório_Banco_Renault.UserControls"
        Title="MainWindowOP20" Height="1080" Width="1920" WindowStyle="None" ContentRendered="OnContentRendered" IsEnabled="{Binding ScreenControl}">
    <DockPanel>
        <uc:MainHeaderUC x:Name="HeaderUC" HeaderTitle="Banco de Teste do Módulo Renault OP20" VerticalAlignment="Top" DockPanel.Dock="Top"/>
        <uc:MenuUC x:Name="MainMenu" DockPanel.Dock="Left" MenuItems="{Binding MenuItems}" PageSelected="OnPageSelected" LoggedUser="{Binding Path=LoggedUser, Mode=OneWay}" BorderBrush="#AFAFAF" BorderThickness="0,0,1,0" Background="WhiteSmoke"/>
        <Grid x:Name="MainGridView" Background="#3E4095" Focusable="False"/>
    </DockPanel>
</Window>
