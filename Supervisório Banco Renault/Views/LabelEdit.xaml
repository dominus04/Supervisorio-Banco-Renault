<Window x:Class="Supervisório_Banco_Renault.Views.LabelEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="LabelEdit" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" Height="600" Width="720">

    <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10" Background="White" Effect="{StaticResource DropShadowEffect}" Margin="10">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="160"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="1" Text="{Binding Label.Name}" ui:ControlHelper.Header="Nome da Etiqueta: " FontSize="14" Margin="15, 5"/>

            <Grid Margin="15, 5" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" SelectedValue="{Binding Label.DateFormat}" ItemsSource="{Binding DateFormats}" ui:ControlHelper.Header="Formato da Data: " HorizontalAlignment="Stretch"/>

                <ComboBox Grid.Column="2" SelectedValue="{Binding Label.JulianDateFormat}" ItemsSource="{Binding JulianDateFormats}" ui:ControlHelper.Header="Formato da Data Juliana: " HorizontalAlignment="Stretch"/>

                <ComboBox Grid.Column="4" SelectedValue="{Binding Label.TimeFormat}" ItemsSource="{Binding TimeFormats}" ui:ControlHelper.Header="Formato da Hora: " HorizontalAlignment="Stretch"/>

                <ComboBox Grid.Column="6" SelectedValue="{Binding Label.SequentialFormat}" ui:ControlHelper.Header="Nº dígitos sequenciais:" HorizontalAlignment="Stretch" ItemsSource="{Binding SequentialFormats}"/>
            </Grid>

            <TextBox Text="{Binding Label.LabelBaseLayout}" Grid.Row="3" ui:ControlHelper.Header="Layout da Etiqueta: " Margin="15, 5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

            <Grid Grid.Row="4" Margin="15, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Turno 1" FontSize="16" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel VerticalAlignment="Center">
                        <TextBox Text="{Binding Label.Tunr1Init}" ui:ControlHelper.Header="Hora Início (hh:mm):"/>
                        <TextBox Text="{Binding Label.Tunr1End}" ui:ControlHelper.Header="Hora Fim: (hh:mm)"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="2" Header="Turno 2" FontSize="16" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel VerticalAlignment="Center">
                        <TextBox Text="{Binding Label.Tunr2Init}" ui:ControlHelper.Header="Hora Início (hh:mm):"/>
                        <TextBox Text="{Binding Label.Tunr2End}" ui:ControlHelper.Header="Hora Fim: (hh:mm)"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="4" Header="Turno 3" FontSize="16" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel VerticalAlignment="Center">
                        <TextBox Text="{Binding Label.Tunr3Init}" ui:ControlHelper.Header="Hora Início (hh:mm):"/>
                        <TextBox Text="{Binding Label.Tunr3End}" ui:ControlHelper.Header="Hora Fim: (hh:mm)"/>
                    </StackPanel>
                </GroupBox>

            </Grid>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,5" Height="50">
                
                <Label Content="Salvar etiqueta" Width="130" FontSize="16" Style="{StaticResource HoverableLabelGreenButton}" Cursor="Hand" MouseDown="Add_MouseDown"/>
                <Label Content="Cancelar" Width="130" FontSize="16" Style="{StaticResource HoverableLabelRedButton}" Cursor="Hand" Margin="25,0,0,0" MouseDown="Cancel_MouseDown"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
