<Window x:Class="Supervisório_Banco_Renault.Views.LabelEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="LabelEdit" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" Height="600" Width="720" Topmost="True">

    <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10" Background="White" Effect="{StaticResource DropShadowEffect}" Margin="10">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="160"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="1" Text="{Binding Label.Name, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Nome da Etiqueta: " FontSize="14" Margin="15, 5"/>

            <Grid Margin="15, 5" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" SelectedValue="{Binding Label.DateFormat}" ItemsSource="{Binding DateFormats}" ui:ControlHelper.Header="Formato Data QR Code: " HorizontalAlignment="Stretch"/>

                <ComboBox Grid.Column="2" SelectedValue="{Binding Label.JulianDateFormat}" ItemsSource="{Binding JulianDateFormats}" ui:ControlHelper.Header="Formato da Data Juliana: " HorizontalAlignment="Stretch"/>

                <ComboBox Grid.Column="4" SelectedValue="{Binding Label.TimeFormat}" ItemsSource="{Binding TimeFormats}" ui:ControlHelper.Header="Formato da Hora: " HorizontalAlignment="Stretch"/>

                <ComboBox Grid.Column="6" SelectedValue="{Binding Label.SequentialFormat}" ui:ControlHelper.Header="Nº dígitos sequenciais:" HorizontalAlignment="Stretch" ItemsSource="{Binding SequentialFormats}"/>
            </Grid>

            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="15, 5">
                <Label  Content="Layout da Etiqueta:" FontSize="14" VerticalAlignment="Bottom"/>
                <Button Content="?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" HorizontalContentAlignment="Center" Height="25" Width="25" Margin="10, 0" Click="Button_Click" x:Name="captionButton"/>
            </StackPanel>

            <Popup StaysOpen="False" x:Name="hintBox" PlacementTarget="{Binding ElementName=captionButton}" Placement="Top" AllowsTransparency="True">
                <Border Background="LightGray" BorderThickness="0.5" BorderBrush="Black" Padding="10" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <Label Content="Código do Cliente:"/>
                            <Label Content="Código do Módulo:"/>
                            <Label Content="Sequencial:"/>
                            <Label Content="Data Juliana:"/>
                            <Label Content="Production Code:"/>
                            <Label Content="Turno:"/>
                            <Label Content="Data:"/>
                            <Label Content="Data do QR:"/>
                            <Label Content="Hora:"/>
                        </StackPanel>
                        <StackPanel Margin="20, 0, 0, 0">
                            <Label HorizontalAlignment="Right" Content="[C__CLIENTE]"/>
                            <Label HorizontalAlignment="Right" Content="[C__MODULO]"/>
                            <Label HorizontalAlignment="Right" Content="[SEQUENCIAL]"/>
                            <Label HorizontalAlignment="Right" Content="[DATAJU]"/>
                            <Label HorizontalAlignment="Right" Content="[P__CODE]"/>
                            <Label HorizontalAlignment="Right" Content="[TURNO]"/>
                            <Label HorizontalAlignment="Right" Content="[DATA]"/>
                            <Label HorizontalAlignment="Right" Content="[DATAQR]"/>
                            <Label HorizontalAlignment="Right" Content="[HORA]"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>

            <TextBox Text="{Binding Label.LabelBaseLayout, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Margin="15, 0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

            <Grid Grid.Row="5" Margin="15, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Turno 1" FontSize="16" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel VerticalAlignment="Center">
                        <TextBox Text="{Binding Label.Tunr1Init, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Hora Início (hh:mm):"/>
                        <TextBox Text="{Binding Label.Tunr1End, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Hora Fim: (hh:mm)"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="2" Header="Turno 2" FontSize="16" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel VerticalAlignment="Center">
                        <TextBox Text="{Binding Label.Tunr2Init, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Hora Início (hh:mm):"/>
                        <TextBox Text="{Binding Label.Tunr2End, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Hora Fim: (hh:mm)"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="4" Header="Turno 3" FontSize="16" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel VerticalAlignment="Center">
                        <TextBox Text="{Binding Label.Tunr3Init, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Hora Início (hh:mm):"/>
                        <TextBox Text="{Binding Label.Tunr3End, UpdateSourceTrigger=PropertyChanged}" ui:ControlHelper.Header="Hora Fim: (hh:mm)"/>
                    </StackPanel>
                </GroupBox>

            </Grid>

            <Grid Grid.Row="7" HorizontalAlignment="Stretch" Margin="15,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="1" Content="Imprimir teste" Width="130" FontSize="16" Style="{StaticResource HoverableLabelGrayButton}" Cursor="Hand" MouseDown="PrintLabelMouseDown"/>
                <Label Grid.Column="3" Content="Salvar etiqueta" Width="130" FontSize="16" Style="{StaticResource HoverableLabelGreenButton}" Cursor="Hand" MouseDown="Add_MouseDown"/>
                <Label Grid.Column="5" Content="Cancelar" Width="130" FontSize="16" Style="{StaticResource HoverableLabelRedButton}" Cursor="Hand" MouseDown="Cancel_MouseDown"/>
            </Grid>
        </Grid>
    </Border>
</Window>
