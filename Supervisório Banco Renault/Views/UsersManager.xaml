<UserControl x:Class="Supervisório_Banco_Renault.Views.UsersManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
             xmlns:enum="clr-namespace:Supervisório_Banco_Renault.Models.Enums"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="980" d:DesignWidth="1620" Width="1620" Height="980">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding Users}" FontSize="18" SelectedItem="{Binding SelectedUser}">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Background" Value="#f0f0f0"/>
                            <Setter Property="BorderBrush" Value="#afafaf"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Width" Value="800"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding Name}" Width="Auto"/>
                    <GridViewColumn Header="Tipo de Usuário" DisplayMemberBinding="{Binding AccessLevel}" Width="Auto"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="BorderBrush" Value="#afafaf"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="1" Content="Adicionar Usuário" FontSize="18" Style="{StaticResource HoverableLabelGreenButton}" MouseDown="AddUserMouseDown" Cursor="Hand"/>
            <Label Grid.Column="3" Content="Editar Usuário" FontSize="18" Style="{StaticResource HoverableLabelGrayButton}" MouseDown="EditUserMouseDown" Cursor="Hand"/>
            <Label Grid.Column="5" Content="Remover Usuário" FontSize="18" Style="{StaticResource HoverableLabelRedButton}" MouseDown="RemoveUserMouseDown" Cursor="Hand"/>

        </Grid>
    </Grid>
</UserControl>
