<UserControl x:Class="Supervisório_Banco_Renault.Views.OP20_Traceability"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
             xmlns:services="clr-namespace:Supervisório_Banco_Renault.Services" 
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DesignHeight="980" d:DesignWidth="1620" Background="White">

    <UserControl.Resources>
        <services:BooleanToSimNaoConverter x:Key="BooleanToSimNaoConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="15">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox ui:ControlHelper.Header="Código da rastreabilidade:" FontSize="24" VerticalAlignment="Center" Text="{Binding TraceabilityCodeFilter, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Column="2" ui:ControlHelper.Header="Código do radiador:" FontSize="24" VerticalAlignment="Center" Text="{Binding RadiatorCodeFilter, UpdateSourceTrigger=PropertyChanged}"/>
            <DatePicker Grid.Column="4" ui:ControlHelper.Header="Data Inicial:" FontSize="24" SelectedDate="{Binding InitialDate}"/>
            <DatePicker Grid.Column="6" ui:ControlHelper.Header="Data Final:" FontSize="24" SelectedDate="{Binding FinalDate}"/>
            <Button Grid.Column="8" Content="Exportar" VerticalAlignment="Bottom" FontSize="24" Margin="0,0,0,5" Width="250" Click="Button_Click"/>
        </Grid>

        <DataGrid x:Name="myDataGrid" Grid.Row="1" ItemsSource="{Binding Traceabilities}" AutoGenerateColumns="False" VerticalAlignment="Stretch" IsReadOnly="True" HorizontalContentAlignment="Center" HorizontalAlignment="Center" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código da rastreabilidade" Binding="{Binding TraceabilityCode}"/>
                <DataGridTextColumn Header="Código do radiador" Binding="{Binding RadiatorCode}"/>
                <DataGridTextColumn Header="Data de produção" Binding="{Binding DateTimeOP20, StringFormat=\{0 : dd/MM/yyyy HH:mm:ss\}}"/>
                <DataGridTextColumn Header="Operador" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="Código do módulo" Binding="{Binding ModuleCode}"/>
                <DataGridTextColumn Header="Código do cliente" Binding="{Binding ClientCode}"/>
                <DataGridTextColumn Header="OP10 verificada" Binding="{Binding RadiatorCodeVerified, Converter={StaticResource BooleanToSimNaoConverter}}"/>
                <DataGridTextColumn Header="Rastreabilidade verificada" Binding="{Binding TraceabilityCodeVerified, Converter={StaticResource BooleanToSimNaoConverter}}"/>
                <DataGridTextColumn Header="Tampões verificados" Binding="{Binding CondenserCoversVerified, Converter={StaticResource BooleanToSimNaoConverter}}"/>
                <DataGridTextColumn Header="Radiador verificado" Binding="{Binding RadiatorVerified, Converter={StaticResource BooleanToSimNaoConverter}}"/>
                <DataGridTextColumn Header="Pressão ATEQ radiador" Binding="{Binding FinalRadiatorPressure}"/>
                <DataGridTextColumn Header="Pressostato radiador" Binding="{Binding FinalRadiatorPSRead}"/>
                <DataGridTextColumn Header="Vazamento ATEQ radiador" Binding="{Binding FinalRadiatorLeak}"/>
                <DataGridTextColumn Header="Condensador verificado" Binding="{Binding CondenserVerified, Converter={StaticResource BooleanToSimNaoConverter}}"/>
                <DataGridTextColumn Header="Pressão ATEQ condensador" Binding="{Binding FinalCondenserPressure}"/>
                <DataGridTextColumn Header="Pressostato condensador" Binding="{Binding FinalCondenserPSRead}"/>
                <DataGridTextColumn Header="Vazamento ATEQ condensador" Binding="{Binding FinalCondenserLeak}"/>
            </DataGrid.Columns>
            </DataGrid>

    </Grid>
</UserControl>
