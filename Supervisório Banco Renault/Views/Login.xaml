<UserControl x:Class="Supervisório_Banco_Renault.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
             mc:Ignorable="d" 
             d:DesignHeight="980" d:DesignWidth="1620" Width="1620" Height="980"
             >
    <Grid Background="White">
        <TextBox x:Name="RFIDInputTextBox" Height="0" Width="0" Margin="0,200,0,0" KeyDown="TextBoxOnKeyDown" Text="{Binding RFID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <StackPanel VerticalAlignment="Center" Width="250">
            <Button Content="Ler Crachá" FontSize="24" HorizontalAlignment="Stretch" Height="50" Margin="0, 20" Click="Button_Click"/>
            <Label Content="Senha:"  FontSize="24" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="LoginPasswordBox" FontSize="32" HorizontalAlignment="Stretch"/>
            <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Stretch" Height="50" FontSize="24" Click="OnLoginButtonClick" Margin="0, 20"/>
        </StackPanel>
    </Grid>
</UserControl>
