<UserControl x:Class="Supervisório_Banco_Renault.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
             mc:Ignorable="d" 
             d:DesignHeight="980" d:DesignWidth="1620" Width="1620" Height="980"
             Loaded="UserControl_Loaded" GotFocus="UserControl_GotFocus" Focusable="True">
    <Grid Background="White">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Clique na tela e aproxime seu crachá do leitor para fazer login." FontSize="64" TextWrapping="Wrap" Width="1300" TextAlignment="Center"/>
        <TextBox x:Name="RFIDInputTextBox" Height="0" Width="0" Margin="0,200,0,0" KeyDown="TextBoxOnKeyDown" Text="{Binding RFID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
