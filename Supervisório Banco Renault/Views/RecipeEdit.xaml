<Window x:Class="Supervisório_Banco_Renault.Views.RecipeEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="RecipeVM" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" Height="470" Width="720">

    <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10" Background="White" Effect="{StaticResource DropShadowEffect}" Width="700" Height="450">
        
        <Grid DataContext="{Binding Recipe}" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="1" VerticalAlignment="Center" FontSize="16" Text="{Binding ModuleCode}" ui:ControlHelper.Header="Código do Módulo:"/>
                <ui:NumberBox Grid.Column="3" VerticalAlignment="Center" FontSize="16" ui:ControlHelper.Header="Posição inicial do código:" Text="{Binding InitialCharacter}" SpinButtonPlacementMode="Compact" Minimum="1"/>
                <ui:NumberBox Grid.Column="5" VerticalAlignment="Center" FontSize="16" ui:ControlHelper.Header="Posição final do código" Text="{Binding FinalCharacter}" SpinButtonPlacementMode="Compact" Minimum="1"/>

            </Grid>

            <Grid Grid.Row="3" Margin="25, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Verificações" FontSize="16" Grid.Column="0" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <CheckBox Content="Etiqueta do módulo" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyModuleTag}"/>
                        <CheckBox Content="Etiqueta final" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyTraceabilityTag}"/>
                        <CheckBox Content="Tampões condensador" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyCondenserCovers}"/>
                        <CheckBox Content="Radiador" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyRadiator}"/>
                        <CheckBox Content="Condensador" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyCondenser}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Radiador" FontSize="14" Grid.Column="2" IsEnabled="{Binding VerifyRadiator}" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <ui:NumberBox ui:ControlHelper.Header="Programa ATEQ:" SpinButtonPlacementMode="Compact" Minimum="1" Text="{Binding AteqRadiatorProgram}" Margin="0,0,0,5"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão mínima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Text="{Binding RadiatorPSMinimum}" Margin="0,0,0,5" SmallChange="0.01" LargeChange="1"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão máxima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Text="{Binding RadiatorPSMaximum}" SmallChange="0.01" LargeChange="1"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Condensador" FontSize="14" Grid.Column="4"  IsEnabled="{Binding VerifyCondenser}" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <ui:NumberBox ui:ControlHelper.Header="Programa ATEQ:" SpinButtonPlacementMode="Compact" Minimum="1" Text="{Binding AteqCondenserProgram}" Margin="0,0,0,5"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão mínima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Text="{Binding CondenserPSMinimum}" Margin="0,0,0,5" SmallChange="0.01" LargeChange="1"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão máxima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Text="{Binding CondenserPSMaximum}" SmallChange="0.01" LargeChange="1"/>
                    </StackPanel>
                </GroupBox>

            </Grid>

            <StackPanel Grid.Row=" 5" Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Salvar receita" Width="130" FontSize="16" Style="{StaticResource HoverableLabelGreenButton}" Cursor="Hand" MouseDown="Add_MouseDown"/>
                <Label Content="Cancelar" Width="130" FontSize="16" Style="{StaticResource HoverableLabelRedButton}" Cursor="Hand" Margin="25, 0" MouseDown="Cancel_MouseDown"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
