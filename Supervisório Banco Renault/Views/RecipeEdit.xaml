<Window x:Class="Supervisório_Banco_Renault.Views.RecipeEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="RecipeVM" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" Height="auto" Width="720">

    <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10" Background="White" Effect="{StaticResource DropShadowEffect}" Margin="10">
        
        <Grid DataContext="{Binding Recipe}" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="15, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" VerticalAlignment="Center" FontSize="14" Text="{Binding ModuleCode}" ui:ControlHelper.Header="Código do Módulo:"/>
                <ui:NumberBox Grid.Column="2" VerticalAlignment="Center" FontSize="14" ui:ControlHelper.Header="Posição inicial do código:" Value="{Binding InitialCharacter}" SpinButtonPlacementMode="Compact" Minimum="1"/>
                <ui:NumberBox Grid.Column="4" VerticalAlignment="Center" FontSize="14" ui:ControlHelper.Header="Posição final do código" Value="{Binding FinalCharacter}" SpinButtonPlacementMode="Compact" Minimum="1"/>

            </Grid>

            <Grid Grid.Row="2" Margin="15, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Verificações" FontSize="16" Grid.Column="0" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <CheckBox Content="Etiqueta do módulo" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyModuleTag}"/>
                        <CheckBox Content="Etiqueta final" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyTraceabilityTag}"/>
                        <CheckBox Content="Tampões condensador" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyCondenserCovers}"/>
                        <CheckBox Content="Radiador" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyRadiator}"/>
                        <CheckBox Content="Condensador" VerticalContentAlignment="Center"  IsChecked="{Binding VerifyCondenser}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Radiador" FontSize="16" Grid.Column="2" IsEnabled="{Binding VerifyRadiator}" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <ui:NumberBox ui:ControlHelper.Header="Programa ATEQ:" SpinButtonPlacementMode="Compact" Minimum="1" Value="{Binding AteqRadiatorProgram}" Margin="0,0,0,5" FontSize="14"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão mínima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Value="{Binding RadiatorPSMinimum}" Margin="0,0,0,5" SmallChange="0.01" LargeChange="1" FontSize="14"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão máxima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Value="{Binding RadiatorPSMaximum}" SmallChange="0.01" LargeChange="1" FontSize="14"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Condensador" FontSize="16" Grid.Column="4"  IsEnabled="{Binding VerifyCondenser}" Style="{x:Null}" BorderBrush="DarkGray">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <ui:NumberBox ui:ControlHelper.Header="Programa ATEQ:" SpinButtonPlacementMode="Compact" Minimum="1" Value="{Binding AteqCondenserProgram}" Margin="0,0,0,5" FontSize="14"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão mínima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Value="{Binding CondenserPSMinimum}" Margin="0,0,0,5" SmallChange="0.01" LargeChange="1" FontSize="14"/>
                        <ui:NumberBox ui:ControlHelper.Header="Pressão máxima pressostato:" SpinButtonPlacementMode="Compact" Minimum="0" Value="{Binding CondenserPSMaximum}" SmallChange="0.01" LargeChange="1" FontSize="14"/>
                    </StackPanel>
                </GroupBox>

            </Grid>

            <ComboBox Grid.Row="3" Margin="15, 5" FontSize="14"  SelectedItem="{Binding Module}" ui:ControlHelper.Header="Modelo da etiqueta:" HorizontalAlignment="Stretch" Height="55"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,15,0" Height="50">
                <Label Content="Salvar receita" Width="130" FontSize="16" Style="{StaticResource HoverableLabelGreenButton}" Cursor="Hand" MouseDown="Add_MouseDown"/>
                <Label Content="Cancelar" Width="130" FontSize="16" Style="{StaticResource HoverableLabelRedButton}" Cursor="Hand" Margin="25,0,0,0" MouseDown="Cancel_MouseDown"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
