<Window x:Class="Supervisório_Banco_Renault.Views.AllowScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supervisório_Banco_Renault.Views"
        mc:Ignorable="d"
        Title="AllowScreen" Height="450" Width="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Label Grid.Row="1" FontSize="24" Content="Ler Crachá" Height="60" Width="210" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource HoverableLabelGrayButton}"/>
        <TextBox Text="{Binding UserTag}" Height="0" Width="0" Style="{x:Null}"/>
        <Label Grid.Row="2" FontSize="24" Content="Cancelar" Height="60" Width="210" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource HoverableLabelRedButton}"/>
    </Grid>
</Window>
